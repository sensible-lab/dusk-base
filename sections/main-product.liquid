<div class="lg:relative">
  <div class="relative h-screen w-full lg:h-auto">
    <div class="absolute bottom-28 left-0 right-0 top-0 snap-y snap-mandatory overflow-y-auto overflow-x-hidden lg:static lg:overflow-auto">
      {% for media in product.media %}
        <div class="h-full w-full snap-start pt-5 lg:h-screen lg:px-80">
          {{
            media.preview_image
            | image_url: width: 1024
            | image_tag:
              loading: lazy,
              sizes: sizes,
              class: 'block w-full h-full max-w-full max-h-full object-contain',
              widths: '512, 1024, 1536, 2048'
          }}
        </div>
      {% endfor %}
    </div>
  </div>
  <div class="hidden lg:absolute lg:bottom-0 lg:top-0 lg:flex lg:w-80 lg:flex-col">
    <div class="flex-1"></div>
    <div class="lg:sticky lg:bottom-0 lg:bg-cyan-300">left data</div>
  </div>
  <div class="relative -mt-40 w-full lg:absolute lg:bottom-0 lg:right-0 lg:top-0 lg:m-0 lg:flex lg:w-80 lg:flex-col">
    <div class="flex justify-end lg:hidden">
      <div class="flex h-12 w-12 items-center justify-center border border-gray-100 bg-white">B1</div>
      <div class="flex h-12 w-12 items-center justify-center border border-gray-100 bg-white">B2</div>
    </div>
    <div class="hidden lg:block lg:flex-1"></div>
    <div class="border-t border-gray-100 bg-white lg:sticky lg:bottom-0 lg:border-0 lg:bg-transparent">
      <div class="relative" x-data="{ pinned: true }">
        <div class="relative h-28 px-8 pt-4 lg:hidden">
          <h1 class="mr-28 font-bold">Flamenco clutch in nappa calfskin</h1>
          <div>16 variants</div>
        </div>
        <div class="h-8 lg:hidden"></div>
        <div class="absolute left-0 top-36 flex w-full px-8 lg:static lg:px-0">
          <div class="flex lg:flex-col" x-ref="productVariantButtons">
            <div class="h-24 w-24 bg-amber-500"></div>
            <div class="h-24 w-24 bg-amber-500"></div>
            <div class="hidden h-24 w-24 bg-amber-500 lg:block"></div>
          </div>
        </div>
        <div
          class="pointer-events-none sticky bottom-0 flex h-24 justify-end lg:hidden"
        >
          <div
            class="absolute top-full h-1 w-1"
            x-intersect:enter.threshold.100="pinned = false;"
            x-intersect:leave.threshold.100="pinned = true;"
          ></div>
          <div
            class="pointer-events-auto h-24 w-24 bg-amber-950 transition-[margin-right] lg:hidden"
            :style="!pinned && { 'margin-right': (window.innerWidth - $refs.productVariantButtons.getBoundingClientRect().left - $refs.productVariantButtons.getBoundingClientRect().width - $el.offsetWidth) + 'px'}"
          ></div>
        </div>
      </div>
    </div>
  </div>
</div>
