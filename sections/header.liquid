{%- liquid
  if section.settings.menu != blank
    render 'header-menu'
  endif
-%}

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "class": "absolute w-full z-50",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Main menu"
    }
  ]
}
{% endschema %}
